{
    "version":  "1.0",
    "dns":  {
                "block_plain_dns":  false,
                "block_doh":  true,
                "block_dot":  true,
                "allowed_resolvers":  [
                                          "127.0.0.1"
                                      ]
            },
    "network":  {
                    "block_quic":  true,
                    "allow_loopback_only":  false
                },
    "self_protection":  {
                            "autoheal":  true,
                            "tamper_response":  "lockdown",
                            "cooldown_seconds":  300
                        },
    "logging":  {
                    "evidence_level":  "verbose"
                },
    "control_plane":  {
                          "mode":  "powershell",
                          "api_base":  "http://127.0.0.1:5050",
                          "health_path":  "/health",
                          "sync_path":  "/sync",
                          "timeout_sec":  3
                      },
    "targets":  {

                }
}
