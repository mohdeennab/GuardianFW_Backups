{
  "version": 1,
  "intents": [
    {
      "id": "INTENT_DOH_EVASION",
      "category": "DNS Integrity",
      "severity": "HIGH",
      "description": "Prevent DNS-over-HTTPS bypass of local DNS policy",
      "triggers": [
        { "type": "firewall_rule", "match": "GuardianFW DoH*" },
        { "type": "registry", "path": "HKLM:\\SOFTWARE\\Policies\\Google\\Chrome", "value": "DnsOverHttpsMode" }
      ]
    },
    {
      "id": "INTENT_QUIC_BYPASS",
      "category": "Transport Evasion",
      "severity": "MEDIUM",
      "description": "Prevent QUIC tunneling to bypass TCP inspection",
      "triggers": [
        { "type": "udp_port", "port": 443 }
      ]
    }
  ]
}
